{
  "compilerOptions": {
    "noEmit": true,
    "outDir": "./build/",
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "allowJs": false,
    "noImplicitAny": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./custom@types/"
    ],
    "lib": [
      "DOM",
      "ES6"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": false,
    "emitRequireType": false
  }
}